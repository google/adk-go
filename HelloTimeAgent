package com.example.agent;
 
import java.time.LocalTime;

public class HelloTimeAgent {

    // A simple function the agent can perform
    public String getCurrentTime() {
        return "‚è∞ The current time is " + LocalTime.now().withNano(0).toString();
    }

    public String greet(String name) {
        return "Hello " + name + "! How can I help you today?";
    }
}
package com.example.agent;

import java.util.Scanner;

public class AgentRunner {
    public static void main(String[] args) {
        HelloTimeAgent agent = new HelloTimeAgent();
        Scanner input = new Scanner(System.in);

        System.out.println("ü§ñ HelloTimeAgent is running!");
        System.out.print("Enter your name: ");
        String name = input.nextLine();

        System.out.println(agent.greet(name));
        System.out.println(agent.getCurrentTime());

        input.close();
    }
}
