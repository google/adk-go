{
  "swagger": "2.0",
  "paths": {
    "/apps/{app_name}/users/{user_id}/sessions/{session_id}": {
      "post": {
        "tags": [
          "sessions"
        ],
        "summary": "Returns a session.",
        "operationId": "getSession",
        "parameters": [
          {
            "type": "string",
            "description": "The app name.",
            "name": "app_name",
            "in": "path",
            "required": true
          },
          {
            "type": "string",
            "description": "The user id.",
            "name": "user_id",
            "in": "path",
            "required": true
          },
          {
            "type": "string",
            "description": "The session id.",
            "name": "session_id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "The session was found."
          },
          "400": {
            "description": "Bad request."
          }
        }
      }
    }
  }
}